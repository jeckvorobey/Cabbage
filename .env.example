# Пример настроек окружения для локальной разработки
# Скопируйте этот файл в .env и подставьте значения

# База данных PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/cabbage

# Настройки приложения
APP_HOST=0.0.0.0
APP_PORT=8000
APP_ENV=dev

# Логирование
LOG_DIR=./logs
LOG_LEVEL=INFO

# Telegram Bot
TELEGRAM_BOT_TOKEN=replace_me
TELEGRAM_MODE=polling
TELEGRAM_WEBHOOK_HOST=https://example.com
TELEGRAM_WEBHOOK_PATH=/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=replace_me

# Mini App / Frontend
FRONTEND_WEBAPP_URL=https://example.com/app/

# JWT
JWT_SECRET=replace_me
JWT_ALGORITHM=HS256
JWT_TTL_SECONDS=3600

# WebApp initData TTL (сек)
WEBAPP_AUTH_TTL_SECONDS=600

# ЮKassa
YOOKASSA__SHOP_ID=replace_me
YOOKASSA__SECRET_KEY=replace_me
YOOKASSA__RETURN_URL=http://localhost:8000/payments/return
YOOKASSA__WEBHOOK_SECRET=replace_me
